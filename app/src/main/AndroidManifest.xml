                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name="com.mechanicfinder.auto.firebase.ResetPasswordActivity">

        </activity>
        <activity android:name="com.mechanicfinder.auto.firebase.UserProfileActivity">
        </activity>
